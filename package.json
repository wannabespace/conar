{
  "private": true,
  "scripts": {
    "prepare": "(test -d .git && lefthook install || echo 'Skipping lefthook install') && bun scripts/setup-dev.ts",
    "fmt": "oxfmt .",
    "fmt:check": "oxfmt --check .",
    "lint": "oxlint .",
    "lint:aware": "oxlint --type-aware",
    "lint:fix": "oxlint --fix --fix-suggestions . && bun run fmt",
    "test:unit": "turbo run test:unit",
    "test:e2e": "turbo run test:e2e",
    "test:start": "turbo run test:start",
    "dev": "turbo run dev",
    "start:api": "cd apps/api && pnpm run start",
    "build:web": "turbo run @conar/web#build",
    "start:web": "cd apps/web && pnpm run start",
    "build:todesktop": "turbo run conar#build:todesktop",
    "drizzle:generate": "turbo run drizzle:generate",
    "drizzle:migrate": "turbo run drizzle:migrate",
    "check-types": "turbo run check-types",
    "update": "taze -r -I major",
    "docker:start": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:stop": "docker-compose -f docker-compose.dev.yml down"
  },
  "devDependencies": {
    "@commitlint/cli": "catalog:",
    "@commitlint/config-conventional": "catalog:",
    "@evilmartians/lefthook": "catalog:",
    "@types/bun": "catalog:",
    "@typescript/native-preview": "catalog:",
    "cross-env": "catalog:",
    "lefthook": "catalog:",
    "npm-run-all2": "catalog:",
    "oxfmt": "catalog:",
    "oxlint": "catalog:",
    "playwright": "catalog:",
    "taze": "catalog:",
    "tsx": "catalog:",
    "turbo": "catalog:",
    "typescript": "catalog:"
  },
  "engines": {
    "bun": ">=1.3.0"
  },
  "packageManager": "pnpm@10.26.1"
}
