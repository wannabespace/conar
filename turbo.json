{
  "$schema": "./node_modules/turbo/schema.json",
  "envMode": "loose",
  "tasks": {
    "build": {
      "dependsOn": ["^build"]
    },
    "build:electron": {
      "dependsOn": ["@conar/desktop#build"]
    },
    "@conar/desktop#build": {
      "dependsOn": ["^check-types"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "cache": false,
      "persistent": true
    },
    "drizzle:migrate": {
      "cache": false
    },
    "drizzle:generate": {
      "cache": false
    }
  }
}
